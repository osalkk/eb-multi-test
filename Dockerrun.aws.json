{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "truck-web",
      "image": "osalkk/truck-web",
      "environment": [
        {
          "name": "Container",
          "value": "Flask"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 5000
        }
      ],
      "essential": true,
      "memory": 128,
      "links": [
        "es"
      ]
    },

    {
      "name": "es",
      "image": "elasticsearch",
      "essential": true,
      "memory": 1000,
      "environment": [
        {
          "name": "ES_HEAP_SIZE",
          "value": "512m"
        }
      ]
    }
  ]
}